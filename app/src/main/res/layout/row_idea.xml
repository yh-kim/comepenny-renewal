<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/idea_list_back"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="5dp">
    <!-- top layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="18dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Writer : "
                android:textColor="@color/colorIdeaGray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jihoon1234"
                android:textColor="#535353"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- content -->
        <TextView
            android:id="@+id/tv_idea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:paddingBottom="13dp"
            android:textSize="15dp"
            android:textStyle="normal" />

        <!-- 구분선 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorMainBlue" />

        <!-- bottom layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="6dp"
            android:gravity="right">


            <TextView
                android:id="@+id/tv_row_booth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:paddingLeft="9dp"
                android:text=""
                android:textColor="@color/colorMainBlue"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    style="@style/Pickth.IdeaThumbnail.mini.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="view : " />

                <TextView
                    android:id="@+id/tv_count_view"
                    style="@style/Pickth.IdeaThumbnail.mini.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    style="@style/Pickth.IdeaThumbnail.mini.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="comment : " />

                <TextView
                    android:id="@+id/tv_count_comment"
                    style="@style/Pickth.IdeaThumbnail.mini.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="9dp">

                <TextView
                    style="@style/Pickth.IdeaThumbnail.mini.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pick : " />

                <TextView
                    android:id="@+id/tv_count_like"
                    style="@style/Pickth.IdeaThumbnail.mini.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>