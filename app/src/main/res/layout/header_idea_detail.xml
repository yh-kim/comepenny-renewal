<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_mainidea_detail"
    android:background="@color/colorWhite"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writer : "
                        android:textColor="@color/colorDarkGray"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_Writer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorDarkDarkGray"
                        android:textSize="12dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="view : "
                        android:textColor="@color/colorDarkGray"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/colorDarkGray"
                        android:textSize="11dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="pick : "
                        android:textColor="@color/colorDarkGray"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/colorDarkGray"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text=""
                        android:textColor="@color/colorDarkGray"
                        android:textSize="11dp" />
                </LinearLayout>
            </LinearLayout>

            <com.pickth.comepennyrenewal.util.CircularImageView
                android:id="@+id/iv_boothicon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:paddingRight="6dp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="center"
            android:background="@color/colorDarkGray" />

        <!-- 본문(캡처할 곳) -->
        <LinearLayout
            android:id="@+id/layout_write_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_idea_original"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:text=""
                android:textColor="@color/colorIdeaDeatail"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/logo_capture"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/logo1"
                android:visibility="invisible"

                />

        </LinearLayout>

        <!-- 책 -->
        <LinearLayout
            android:id="@+id/ll_book_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp"
                android:text="*Book info*"
                android:textSize="9dp"
                android:textColor="@color/colorDarkDarkGray"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/book_info_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_book_info_img"
                    android:layout_width="50dp"
                    android:layout_height="75dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_book_info_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/colorDarkDarkGray"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_book_info_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDarkDarkGray"
                        android:textSize="9dp" />

                    <TextView
                        android:id="@+id/tv_book_info_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDarkDarkGray"
                        android:textSize="9dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 공유, 좋아요-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/share" />

            <ImageButton
                android:id="@+id/btn_pick"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/detail_pickbutton_before" />
        </LinearLayout>

        <!-- 댓글 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_comment_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkGray"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="개의 댓글이있습니다"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="11dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"
                android:text="수정/삭제"
                android:textColor="@color/colorDarkGray"
                android:textSize="11dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/colorDarkGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edit_reple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="댓글달기..."
                android:maxLines="20"
                android:textColorHint="#b6b6b6"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/btn_reple"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:text="작성"
                android:textColor="@color/colorDarkDarkGray"
                android:textSize="16dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>