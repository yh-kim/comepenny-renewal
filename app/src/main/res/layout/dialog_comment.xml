<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/colorDivideGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.pickth.comepennyrenewal.util.CircularImageView
            android:id="@+id/iv_reple_modify_basic"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/myinfo_userimage" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_reple_modify_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@null"
                android:hint="댓글달기..."
                android:textColorHint="#b6b6b6"
                android:textSize="13dp"
                android:maxLines="20"

                />


        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:paddingBottom="10dp"
        android:background="@color/colorDivideGray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btn_reple_update"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="7dp"
            android:visibility="invisible"
            android:padding="3dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="업데이트"
            android:textColor="@color/colorDarkDarkGray"
            android:textSize="15dp" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text=""></TextView>

        <TextView
            android:id="@+id/btn_reple_cancel"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="취소"
            android:textColor="@color/colorDarkDarkGray"
            android:textSize="15dp"

            />
    </LinearLayout>


</LinearLayout>