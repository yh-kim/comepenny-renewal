<resources>
    <style name="Nova.Widget.Button" parent="android:Widget.Button">
        <!-- button background, touch feed back -->
        <item name="android:background">@color/colorMainBlue</item>

        <!-- button minimum size -->
        <item name="android:minWidth">96dp</item>
        <item name="android:minHeight">48dp</item>

        <!-- button text style -->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    
    
    <style name="Pickth.IdeaThumbnail.mini.TextView" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorIdeaGray</item>
    </style>
</resources>
